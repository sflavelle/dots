// -*- mode: jsonc -*-
[
  {
    "name": "mainbar",
    {{ if eq .chezmoi.hostname "rumbi" }}
    "output": ["eDP-1"],
    {{ else }}
    "output": ["DP-2"],
    {{ end }}
    // "layer": "top", // Waybar at top layer
    // "position": "bottom", // Waybar position (top|bottom|left|right)
    "height": 30, // Waybar height (to be removed for auto height)
    // "width": 1280, // Waybar width
    "spacing": 4, // Gaps between modules (4px)
    // Choose the order of the modules
    "include": [
      "~/.config/waybar/defaults.jsonc",
    ],

    {{ if eq .chezmoi.hostname "snatcher" }}
    "modules-left": [
      "river/tags",
      "river/mode",
      "sway/scratchpad",
      "custom/weather"
    ],
    "modules-center": [
      "river/window"
    ],
    "modules-right": [
      "mpd",
      "idle_inhibitor",
      "pulseaudio",
      "bluetooth",
      "network",
      "cpu",
      "memory",
      "keyboard-state",
      "clock",
      "custom/notification",
      "tray",
      "custom/power"
    ]
    {{ else if eq .chezmoi.hostname "rumbi" }}
    "modules-left": [
      "river/tags",
      "river/mode",
      "custom/weather"
    ],
    "modules-right": [
      "pulseaudio",
      "bluetooth",
      "network",
      "cpu",
      "battery",
      "clock",
      "custom/notification",
      "tray"
    ]
    {{ end }}
  },
  {
    "name": "secondarybar",
    "output": ["!DP-2", "!eDP-1"],
    "height": 30,
    "spacing": 2,
    "modules-left": [
      "river/tags",
      "river/mode",
      "sway/scratchpad"
    ],
    "modules-center": [
      "river/window"
    ],
    "modules-right": [
      "mpd",
      "idle_inhibitor",
      "clock"
    ]
  }
]
