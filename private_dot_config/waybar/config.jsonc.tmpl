// -*- mode: jsonc -*-
{{- $mainDisplay := "null" }}
[
  {
    "name": "main",
    {{- if eq .chezmoi.hostname "chromebook" }}
    {{- $mainDisplay = "eDP-1" }}
    {{ else if eq .chezmoi.hostname "snatcher" }}
    {{- $mainDisplay = "DP-2" }}
    {{ end -}}
    "output": "{{ $mainDisplay }}",
    "height": 30, // Waybar height (to be removed for auto height)
    "spacing": 4, // Gaps between modules (4px)
    "include": [
      "~/.config/waybar/defaults.jsonc",
    ],
    {{- if eq .chezmoi.hostname "snatcher" }}
    "modules-left": [
      "niri/workspaces",
      "custom/weather"
    ],
    "modules-center": [
      "river/window"
    ],
    "modules-right": [
      "mpd",
      "wireplumber",
      "clock",
      "custom/notification",
      "tray"
    ]
    {{ else if eq .chezmoi.hostname "rumbi" }}
    "modules-left": [
      "river/tags",
      "river/mode",
      "custom/weather"
    ],
    "modules-right": [
      "pulseaudio",
      "bluetooth",
      "network",
      "cpu",
      "battery",
      "clock",
//      "custom/notification",
      "tray"
    ]
    {{ end -}}
  },
  {
    "layer": "top",
    "output": "!{{ $mainDisplay }}",
    "height": 30,
    "include": [ "~/.config/waybar/defaults.jsonc", ],
    "modules-left": [
      "niri/workspaces"
    ],
    "modules-center": [
      "niri/window"
    ],
    "modules-right": [
      "clock"
    ]
  }
]
